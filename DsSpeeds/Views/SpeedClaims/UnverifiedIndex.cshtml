@model IEnumerable<Read.Models.RecordedSpeedReadModel>

<h2>@ViewBag.Title</h2>
<p>The following are claimed speeds which have not yet been independently verified. You can verify the speeds below if you meet the following criteria:</p>
<ul>
    <li>You witnessed the claimed speed</li>
    <li>You were not the pilot</li>
    <li>You were not the person who entered the claim</li>
</ul>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SpeedInMilesPerHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PilotName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AircraftName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpeedInMilesPerHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PilotName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AircraftName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteName)
        </td>
        <td>

            @using (Html.BeginForm("Verify", "SpeedClaims", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" Value="@(item.Id)"/>
                <button type="submit">Verify</button>
            }


            @Html.ActionLink("Details", "Details", new {id = item.Id, @class="button"}) |
            @Html.ActionLink("Delete", "DeleteUnverified", new {id = item.Id, @class = "button" })
        </td>
    </tr>
}

</table>
